<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_dialog"
              android:padding="@dimen/spacing_high"
              android:gravity="center"
              android:orientation="vertical">

    <ProgressBar
            android:id="@+id/progressbar_progress_dialog"
            android:layout_width="@dimen/size_of_progress_bar"
            android:layout_height="@dimen/size_of_progress_bar" />

    <ImageView
            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="gone"
            android:id="@+id/image_progress_dialog"
            android:layout_width="@dimen/size_of_progress_bar"
            android:layout_height="@dimen/size_of_progress_bar" />

    <TextView
            android:layout_marginBottom="@dimen/spacing_medium"
            style="@style/contentText"
            android:textSize="@dimen/text_title"
            android:id="@+id/text_progress_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

    <Button
            android:layout_marginTop="@dimen/spacing_low"
            android:id="@+id/button_progress_dialog"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:text="@string/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>